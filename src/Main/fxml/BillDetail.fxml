<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.GUIControllers.BillDetailController">
   <children>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#back" style="-fx-background-color: white;" text="&lt;&lt;&lt;" textFill="#00000080" />
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Label text="DETAIL" wrapText="true">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <Label fx:id="roomIDLabel" text="Room ID : " />
                  <Label fx:id="capacityLabel" text="Capacity : " />
                  <Label fx:id="typeLabel" text="Type : " />
                  <Label fx:id="priceLabel" text="Price : " />
               </children>
            </VBox>
            <ImageView fx:id="roomImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" />
   </padding>
</VBox>
