<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.GUIControllers.Employee.RoomBooking.Booking.BillDetailController">
   <children>
      <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-border-radius: 20; -fx-border-width: 5; -fx-border-color: FED775; -fx-background-radius: 30;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="DETAIL" wrapText="true">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <VBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label fx:id="roomIDLabel" text="Room ID : " />
                        <Label fx:id="capacityLabel" text="Capacity : " />
                        <Label fx:id="typeLabel" text="Type : " />
                        <Label fx:id="priceLabel" text="Price : " />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#back" style="-fx-background-color: white;" text="back" textFill="#00000080" />
         </children>
         <effect>
            <DropShadow color="#0000001a" />
         </effect>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
