<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainPane" alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="250.0" spacing="20.0" style="-fx-background-color: orange;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.GUIControllers.SliderController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <ImageView fitHeight="50.0" fitWidth="100.0" onMouseClicked="#hide" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/back.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#booking" prefWidth="150.0" style="-fx-background-color: white; -fx-background-radius: 20;" text="BOOKING">
         <effect>
            <DropShadow color="#0000001a" offsetX="3.0" offsetY="3.0" />
         </effect>
