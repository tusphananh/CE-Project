            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </Button>
      <Button mnemonicParsing="false" onAction="#checkin" prefWidth="150.0" style="-fx-background-color: white; -fx-background-radius: 20;" text="CHECK IN">
         <effect>
            <DropShadow color="#0000001a" offsetX="3.0" offsetY="3.0" />
         </effect>
         <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </Button>
      <Button mnemonicParsing="false" onAction="#checkout" prefWidth="150.0" style="-fx-background-color: white; -fx-background-radius: 20;" text="CHECK OUT">
         <effect>
            <DropShadow color="#0000001a" offsetX="3.0" offsetY="3.0" />
         </effect>
         <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </Button>
      <Button mnemonicParsing="false" onAction="#restaurant" prefWidth="150.0" style="-fx-background-color: white; -fx-background-radius: 20;" text="RESTAURANT">
         <effect>
            <DropShadow color="#0000001a" offsetX="3.0" offsetY="3.0" />
         </effect>
         <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" top="20.0" />
   </padding>
   <effect>
      <DropShadow color="#0000004d" radius="12.25" width="30.0" />
   </effect>
</VBox>
