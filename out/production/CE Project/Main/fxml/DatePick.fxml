                                    <DropShadow color="#0000001a" height="20.0" radius="9.5" width="20.0" />
                                 </effect>
                                 <font>
                                    <Font name="Arial Bold" size="11.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </StackPane>
         </children>
         <padding>
            <Insets bottom="30.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
