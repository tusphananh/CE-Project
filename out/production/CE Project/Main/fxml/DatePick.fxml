<StackPane fx:id="stackPane" alignment="TOP_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.GUIControllers.DayPickController">
   <children>
      <VBox fx:id="mainPane" alignment="TOP_CENTER" onMouseClicked="#onMouseClicked" spacing="10.0" style="-fx-background-color: white;">
         <children>
            <HBox>
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#slide" style="-fx-background-color: white;" textAlignment="JUSTIFY" wrapText="true">
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/navigationButton.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <StackPane fx:id="mainStack">
               <children>
                  <VBox fx:id="bookingPane" alignment="CENTER" spacing="20.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="82.0" prefWidth="420.0" style="-fx-spacing: 5;">
                           <children>
                              <VBox alignment="CENTER" prefHeight="89.0" prefWidth="216.0" style="-fx-spacing: 15;">
                                 <children>
                                    <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="221.0" spacing="5.0">
                                       <children>
                                          <ImageView fitHeight="26.0" fitWidth="22.0" opacity="0.3" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../../images/next.png" />
                                             </image>
                                          </ImageView>
                                          <DatePicker fx:id="fromTextField" promptText="From" style="-fx-background-color: white; -fx-background-radius: 20;" />
                                       </children>
                                    </HBox>
                                    <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="221.0" spacing="5.0">
                                       <children>
                                          <ImageView fitHeight="23.0" fitWidth="21.0" opacity="0.3" pickOnBounds="true" preserveRatio="true" rotate="180.0">
                                             <image>
                                                <Image url="@../../images/next.png" />
                                             </image>
                                          </ImageView>
                                          <DatePicker fx:id="toTextField" promptText="To" style="-fx-background-color: white;" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchAvailableRoom" prefHeight="68.0" prefWidth="69.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: fed755; -fx-border-radius: 10; -fx-border-width: 1;" text="SEARCH" textFill="#fed755">
